<h3 class="title">Datetime field</h3>

<div class="field">
  <%= f.label :begin_from, class: "label" %>
  <div class="control">
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "unlimited" %>
          Unlimited
        </label>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "now" %>
          Now with offset
        </label>
      </p>
      <p class="control">
        <%= f.number_field :begin_from_now_minutes_offset, class: "input", step: 1 %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "time" %>
          Time
        </label>
      </p>
      <p class="control">
        <%= f.datetime_field :begin, class: "input" %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "minutes_before_end" %>
          Minutes before end
        </label>
      </p>
      <p class="control">
        <%= f.number_field :minutes_before_end, class: "input", min: 1, step: 1 %>
      </p>
    </div>
  </div>
</div>

<div class="field">
  <%= f.label :end_to, class: "label" %>
  <div class="control">
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "unlimited" %>
          Unlimited
        </label>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "now" %>
          Now with offset
        </label>
      </p>
      <p class="control">
        <%= f.number_field :end_to_now_minutes_offset, class: "input", step: 1 %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "time" %>
          Time
        </label>
      </p>
      <p class="control">
        <%= f.datetime_field :end, class: "input" %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "minutes_since_begin" %>
          Minutes since begin
        </label>
      </p>
      <p class="control">
        <%= f.number_field :minutes_since_begin, class: "input", min: 1, step: 1 %>
      </p>
    </div>
  </div>
</div>

<hr>
